[user]
	email = 41122948+manakjiri@users.noreply.github.com
	name = Jiri Manak
	signingKey = ~/.ssh/id_ed25519.pub
	username = manakjiri
[gpg]
	format = ssh
[commit]
	gpgsign = true
[init]
	defaultBranch = main
[submodule]
	recurse = true
[push]
	autoSetupRemote = true
[core]
	editor = nano
	excludesfile = ~/.gitignore_global
[pull]
	rebase = false

[includeIf "gitdir:~/projects/applifting/"]
	path = .gitconfig-applifting

[alias]
	ch = checkout
	br = branch
	co = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
[rerere]
	enabled = true
